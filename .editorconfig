# EditorConfig helps maintain consistent coding styles across various editors
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Rust files
[*.rs]
indent_size = 4
max_line_length = 100

# TOML files
[*.toml]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 4

# Makefiles
[Makefile]
indent_style = tab

# Docker files
[Dockerfile*]
indent_size = 2

# Git config
[.git{ignore,attributes}]
indent_size = 2
